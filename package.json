{
  "name": "reusable-atomic-workflows",
  "version": "1.0.0",
  "description": "A collection of reusable GitHub Actions workflows with automatic documentation generation",
  "main": "dist/index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "generate-docs": "pnpm build && node dist/generate-docs.js",
    "clean": "rimraf dist",
    "prebuild": "pnpm clean"
  },
  "keywords": [
    "github-actions",
    "workflows",
    "reusable",
    "prettier",
    "yaml-formatting",
    "documentation-generator"
  ],
  "author": "Thre4dripper",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^20.19.17",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "prettier": "^3.0.3",
    "prettier-plugin-sort-json": "^3.1.0",
    "rimraf": "^5.0.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "glob": "^10.3.4",
    "markdown-table": "^3.0.3",
    "yaml": "^2.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
